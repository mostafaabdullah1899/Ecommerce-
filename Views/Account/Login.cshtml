@model Final_Project.ViewModel.LoginVM

@{
    Layout = "_NewLayout";
    ViewData["Title"] = "Login";
}

  <style>
    body {
      margin: 0;
      color: #e6e9f8;
      /* background: #ffffff; */
      font: 600 16px/18px 'Open Sans', sans-serif;
      background-image: url('https://wallpapercave.com/wp/wp3130193.jpg') !important ;
      background-repeat: no-repeat;
      background-size: cover;
    }

    div {

      /* background-color: #5fb4b4; */
      padding: 20px;
    }


     input[type='submit'] {
      background-color: #005858 !important;
      padding:10px 20px 10px 20px;
      color: white !important;
      border-radius: 5px;
      border: none;
      font-family: 'Lucida Sans';
      font-size: 16px;
      font-weight: bold;
    }
    input[type='submit']:hover {
      background-color: white !importat ;
      color:  #005858 !important;

      cursor: pointer;
      transition: 0.5s ease-in-out;
    }

    #all {
      
      margin: auto;
     max-width: 400px;
            background: rgba(128, 128, 128, 0.466);

      position: relative;
      background-color: rgba(0, 0, 0, 0.534);
      box-shadow: 0 12px 15px 0 rgba(0, 0, 0, 0.418), 0 17px 50px 0 rgba(0, 0, 0, .19);
    }

    .group {
      border: none;
      padding: 15px 20px;
      background: rgba(128, 128, 128, 0.466);
      width: 400px;
      display: inline-block;
      box-sizing: border-box;

    }
    h2{
      font-family: 'Montserrat';
      color: white;
    }
    label{
      font-family: 'Lucida Sans';
      color: #fff;
    }

    input {
      outline: none;
      font-family: 'Montserrat';
      padding: 5px;
      
    }
    span{
      font-family: 'Lucida Sans';
      color: #fff;
    }
    
  </style>
 



        <form asp-action="Login">
         <div asp-validation-summary="All" class="text-danger"></div>
          <div id="all">
            <div class="group">
                  <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" placeholder="Enter your Name "class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" placeholder="Enter your PassWord "class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="group form-check">
                <label class="form-check-label">
                <input class="form-check-input" asp-for="RememberMe" /> @Html.DisplayNameFor(model => model.RememberMe)
                </label>
            </div>
            <div class="group"  style="display:inline; margin-right:25%;">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
            <div style="display:inline;">
    <a style="color:white;" asp-action="Register">Register</a>
</div>

        </div>

        </form>
</div>






@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

