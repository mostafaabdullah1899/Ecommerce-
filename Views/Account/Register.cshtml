@model Final_Project.ViewModel.RegisterVM


@{
    Layout = "_NewLayout";
    ViewData["Title"] = "Register";
}

  <style>
    body {
      margin: 0;
      color: #e6e9f8;
      /* background: #ffffff; */
      font: 600 16px/18px 'Open Sans', sans-serif;
      background-image: url('https://wallpapercave.com/wp/wp3130193.jpg') !important ;
      background-repeat: no-repeat;
      background-size:cover;
    }

    div {

      /* background-color: #5fb4b4; */
      padding: 20px;
    }


     input[type='submit'] {
      background-color: #005858 !important;
      padding:10px 20px 10px 20px;
      color: white !important;
      border-radius: 5px;
      border: none;
      font-family: 'Lucida Sans';
      font-size: 16px;
      font-weight: bold;
    }
    input[type='submit']:hover {
      background-color: white !importat ;
      color:  #005858 !important;

      cursor: pointer;
      transition: 0.5s ease-in-out;
    }

    #all {
       line-height:2;
      margin: auto;
     max-width: 400px;
            background: rgba(128, 128, 128, 0.466);

      position: relative;
      background-color: rgba(0, 0, 0, 0.534);
      box-shadow: 0 12px 15px 0 rgba(0, 0, 0, 0.418), 0 17px 50px 0 rgba(0, 0, 0, .19);
    }

    .group {
      border: none;
      padding: 15px 20px;
      background: rgba(128, 128, 128, 0.466);
      width: 400px;
      display: inline-block;
      box-sizing: border-box;

    }
    h2{
      font-family: 'Montserrat';
      color: white;
    }
    label{
      font-family: 'Lucida Sans';
      color: #fff;
    }

    input {
      outline: none;
      font-family: 'Montserrat';
      padding: 5px;
      
    }
    span{
              color:White;
    }
    .text-danger{
          color:#d44950;

;
    }
  </style>





        <form asp-action="Register">
         <div asp-validation-summary="All" class="text-danger"></div>
          <div id="all">
            <div class="group">
                  <label asp-for="UserName" class="control-label"></label> <br />
                <input asp-for="UserName" placeholder="Enter your Name "class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
              <div class="group">
                <label asp-for="PhoneNumber" class="control-label"></label> <br />
                <input asp-for="PhoneNumber" placeholder="Enter your PhoneNumber " class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="group">
                <label asp-for="Address" class="control-label"></label> <br />
                <input asp-for="Address" placeholder="Enter your Address " class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="group">
                <label asp-for="Email" class="control-label"></label><br />
                <input asp-for="Email"placeholder="Enter your Email"  class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            
            <div class="group">
                <label asp-for="Password" class="control-label"></label> <br />
                <input asp-for="Password" placeholder="Enter your PassWord "class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="group">
                <label asp-for="ConfirmPassword" class="control-label"></label><br />
                <input asp-for="ConfirmPassword" placeholder="Confirm your PassWord " class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            
           
           
            <div class="group"  style="display:inline; margin-right:25%;">
                <input type="submit" value="Register" class="btn btn-primary" />
            </div>
            
            <div style="display:inline;">
                <a style="color:white;" asp-action="Login">Login</a>
            </div>


        </div>
        </form>





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

