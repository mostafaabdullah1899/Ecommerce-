<style>
/* Popup container - can be anything you want */
a{
      cursor: pointer;
}
.popup {
  position: absolute;
  display:block;
  left: auto;
  right:auto;
  cursor: pointer;
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
}

/* The actual popup */
.popup .popuptext {
  visibility: hidden;
  width: 160px;
  background-color: #059862;
  color: #fff;
  text-align: center;
  border-radius: 6px;
  padding: 8px 0;
  position: fixed;
  bottom: 10%;
  left: 80%;
  z-index: 1;

  margin-left: -80px;
}

/* Popup arrow */
.popup .popuptext::after {
  content: "";
  position: absolute;
  left: auto;
  right:auto;
  margin-left: -5px;
  border-width: 5px;
  border-style: solid;
  border-color: #555 transparent transparent transparent;
}

/* Toggle this class - hide and show the popup */
.popup .show {
  visibility: visible;
  -webkit-animation: fadeIn 1s;
  animation: fadeIn 1s;
}

</style>
  
  <div class="popup">
  <span class="popuptext" id="myPopup"><span>&#10003;</span> Added To Cart</span>
</div>


 <section class="product_section layout_padding">
            
               <div class="heading_container" style="align-items: center;">
                  <h2>
                     Our <span>products</span>
                  </h2>
               </div>  
               <div class="row">
        @foreach (Product item in @Model)
        {
                  <div class="col-sm-6 col-md-4 col-lg-4">
                     <div class="box">
                        <div class="">
                           
                        </div>
                        <div  class="detail-box">
                            <h5  id="title1" >
                                @item.Name
                            </h5>
                            <h6 id="price1">
                              $ @item.Price
                            </h6>
                         </div>
                        <div class="img-box">
                           <img  id="img1"src="images/@item.Image" alt="">
                        </div>
                        <div class="option_container">
                            <div class="options">
        
                             <a class="option1" value="1" onclick="addProductToCart(@item.Id)">
                                Add to Cart
                                 </a>
     
                            </div>
                          
                        </div>
        
                        
                     </div>


                  </div>
        }               
                  </div>
                  @if( ViewData["Title"] == "Home Page"){
                  <div class="btn-box">
                     <a asp-action="Index" asp-controller="Product">
                        More products
                     </a>
                  </div>
                  }
         </section>
     <script>
       function myFunction() {
            var popup = document.getElementById("myPopup");
            popup.classList.add("show");
            setTimeout(function () {popup.classList.remove("show")}, 1000);	
        }
        function addProductToCart(id){ 
        
            var data = { id: id };
            $.ajax({
              type: "POST",
              url: 'Product/SetCookie/',
              data: data,
              success: function(resultData) {
                  myFunction();
                  document.getElementById("lblCartCount").innerText = resultData;
              }
            });
        }
        
    </script> 
@section Scripts {
      <script src="/js/product.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
 
}
